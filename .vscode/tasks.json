            "command": "cd ${workspaceFolder}/test-1 && ${workspaceFolder}/exec bazel build :hello-world",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "bazel-run-hello-world",
            "type": "shell",
            "command": "cd ${workspaceFolder}/test-1 && ${workspaceFolder}/exec bazel run :hello-world",
            "group": {
                "kind": "run",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
